        </div>
    </div>
</div>
<!--Banner area end-->
<!--Recommended product area start-->
<div class="recommended_product">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="shop_product_head d-flex justify-content-between mb-30">
                    <div class="section_title space_2 text-left">
                        <h3>Sản phẩm khuyên dùng</h3>
                    </div>
                    <div class="home_shop_product text-right">
                        <ul class="product-tab-list nav d-flex flex-wrap justify-content-end" role="tablist">
                            <li>
                                <a class="active" href="#fresh_fruit" data-toggle="tab" role="tab" aria-selected="true" aria-controls="fresh_fruit">
                                    Trái cây tươi
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-content">
            <div class="tab-pane active show fade" id="fresh_fruit" role="tabpanel">
                <div class="row">
                    <div class="features_product_active owl-carousel">
                        @foreach (var item in Model.TopSellProducts)
                        {
                            var url = "/" + item.Name + "-" + "p." + item.Id + ".html";
                            <div class="col-lg-2">
                                <div class="single__product">
                                    <div class="single_product__inner">
                                        <span class="new_badge">new</span>
                                        @if (item.Quality != 0)
                                        {
                                            <span class="number">Còn hàng</span>
                                        }
                                        else
                                        {
                                            <span class="number" style="background:orangered">Hết hàng</span>
                                        }

                                        <div class="product_img">
                                            <a href="#">
                                                <img src="@item.Image" alt="" style="height:253.8px;width:350px">
                                            </a>
                                        </div>
                                        <div class="product__content text-center">
                                            <div class="produc_desc_info">
                                                <div class="product_title">
                                                    <h4><a href="@url">@item.Name</a></h4>
                                                </div>
                                                <div class="product_price">
                                                    <p>@item.Price vnđ</p>
                                                </div>
                                            </div>
                                            <div class="product__hover">
                                                <ul>
                                                    <li><a href="#" class="cart-order" data-id="@item.Id"><i class="ion-android-cart" title="Thêm vào gỏi"></i></a></li>
                                                    <li><a class="cart-fore" href="#" data-id="@item.Id" data-toggle="modal" data-target="#my_modal" title="Xem Nhanh"><i class="ion-android-open"></i></a></li>
                                                    <li><a href="@url" data-id="@item.Id"><i class="ion-clipboard" title="Xem thông tin"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>



        </div>

    </div>
</div>
<!--Recommended product area end-->
<!--New product area-->
