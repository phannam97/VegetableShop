@model HomeViewModel
@{

    ViewData["MetaKeyword"] = Model.MetaKeyword;
    ViewData["MetaDescription"] = Model.MetaDescription;
}
@section Scripts{
    <script src="~/client-app/controllers/home/index.js" asp-append-version="true"></script>
    <script>
        var home = new HomeController();
        home.initialize();
    </script>
}
<!--Slider start-->
