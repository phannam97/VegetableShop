    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="section_title space_2 text-left">
                    <h3> Sản phẩm bán chạy </h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class=" features_product_active best_selling_product_list owl-carousel">
                    @foreach (var item in Model.HotProducts)
                    {
                        var url = "/" + item.Name + "-" + "p." + item.Id + ".html";
                        <div class="best_selling_product">
                            <div class=" single_small_product mb-30">
                                <div class="product_thumb">
                                    <a href="@url">
                                        <img src="@item.Image" alt="" style="width:82px;height:60px">
                                    </a>
                                </div>
